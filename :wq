#pragma once

#include <string>

class User {
public:
    User(const std::string& text, const std::string& sender,
        const std::string& receiver)
        : text_(text)
        , sender_(sender)
        , receiver_(receiver)
    {
    }

private:
    const std::string text_;
    const std::string sender_;
    const std::string receiver_;
};
